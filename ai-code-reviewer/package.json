{
  "name": "ai-code-reviewer",
  "version": "1.0.0",
  "description": "AI Code Review Tool with Gemini AI and GitHub API",
  "scripts": {
    "chat": "npx ts-node src/chat-gemini.ts",
    "preview": "npx ts-node src/preview-pull-request.ts",
    "auto-review": "npx ts-node src/auto-review-pr.ts"
  },
  "keywords": [
    "ai",
    "code-review",
    "gemini",
    "github",
    "pull-request"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
